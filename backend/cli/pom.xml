                    <id>assemble-linux_aarch64</id>
                    <phase>package</phase>
                    <goals>
                      <goal>single</goal>
                    </goals>
                    <configuration>
                      <escapeString>\</escapeString>
                      <descriptors>
                        <descriptor>src/main/assembly/dist-linux_aarch64.xml</descriptor>
                      </descriptors>
                    </configuration>
                  </execution>
                </executions>
              </plugin>
            </plugins>
          </build>
      </profile>

